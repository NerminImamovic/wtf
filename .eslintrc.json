{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "jsx": true,
    "useJSXTextNode": true,
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "import/extensions": [
      0,
      "never",
      {
        "ignorePackages": true
      }
    ],
    "spaced-comment": [
      "error",
      "always"
    ],
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_instance",
          "_update",
          "_database"
        ]
      }
    ],
    "camelcase": [
      "error",
      {
        "allow": [
          "oauth2_v2"
        ],
        "properties": "never"
      }
    ],
    "func-names": [
      "error",
      "never"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "@typescript-eslint/type-annotation-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "no-extra-semi": 0,
    "import/no-unresolved": "off",
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.ts",
          "**/*.spec.ts"
        ]
      }
    ],
    "no-unused-vars": "off",
    "dot-notation": "off",
    "class-methods-use-this": "off",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "handle-callback-err": "error",
    "quotes": [
      "error",
      "single"
    ],
    "consistent-return": "off",
    "no-use-before-define": "off",
    "no-useless-constructor": "off",
    "no-empty-function": "off"
  },
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "settings": {}
}
